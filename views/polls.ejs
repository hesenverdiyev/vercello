<style>
   .image-collage {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
  max-height: 230px;
}

.collage-image {
  width: 120px;
  height: 120px;
  object-fit: cover;
  margin-right: 5px;
  margin-bottom: 5px;
}
</style>
</head>
   <!-- body -->
   <body class="main-layout inner_page">
      <!-- loader  -->
      <div class="loader_bg">
         <div class="loader"><img src="images/loading.gif" alt="#"/></div>
      </div>
      <!-- end loader -->
     
         <!-- header -->
         <%- include("partials/_menu") %>
      <!-- end header inner -->
      <!-- team -->
      <div class="team">
         <div class="container_with">
            <div class="row">
               <div class="col-md-12">
                  <div class="titlepage text_align_center">
                     <h2>Tüm Anketler</h2>
                  </div>
               </div>

               <% for (poll of polls) { %>
                  <div class="col-md-3">
                    <div class="team_box text_align_center">
                      <div class="team_img">
                        <div class="image-collage">
                            <img src="<%= poll.options[0].picture %>" alt="<%= poll.options[0].title %>" class="collage-image" />
                            <img src="<%= poll.options[1].picture %>" alt="<%= poll.options[1].title %>" class="collage-image" />
                        </div>
                      </div>
                      <div class="craig">
                        <p><a href="/polls/<%= poll.pollname %>"><%= poll.pollquestion %></a></p>
                      </div>
                    </div>
                  </div>
                <% } %>
                

            </div>
         </div>
      </div>
      <script>
         const images = document.querySelectorAll('.collage-image');

// Adding click event listener to each image
images.forEach(image => {
  image.addEventListener('click', () => {
    // Redirect user to new URL
    window.location.href = '/polls/<%= poll.pollname %>';
  });
});
      </script>
      <!-- end team -->
      <!-- end footer -->
      <%- include("partials/_footer") %>